<div class="alert alert-secondary" role="alert">
    <div class="row">
        <div class="col-md-4">
            <button type="submit" class="btn btn-success d-flex justify-content-center align-items-center h-75 w-100 mt-3" @onclick="HandleNewMemberPageSubmit">
                <i class="bi bi-person-plus-fill"></i>
                <span class="ms-2">Add New Member</span>
            </button>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary d-flex justify-content-center align-items-center h-75 w-100 mt-3" @onclick="HandleViewMembersPageSubmit">
                <i class="bi bi-binoculars-fill"></i>
                <span class="ms-2">View Members</span>
            </button>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-warning d-flex justify-content-center align-items-center h-75 w-100 mt-3" @onclick="HandleModifyMemberPageSubmit">
                <i class="bi bi-pencil-square"></i>
                <span class="ms-2">Modify Member</span>
            </button>
        </div>
    </div>
</div>


@code {
    [Parameter] public EventCallback OnSubmitAddNewMember { get; set; }
    [Parameter] public EventCallback OnSubmitViewMembers { get; set; }
    [Parameter] public EventCallback OnSubmitModifyMember { get; set; }

    private async Task HandleNewMemberPageSubmit()
    {
        await OnSubmitAddNewMember.InvokeAsync();
    }

    private async Task HandleViewMembersPageSubmit()
    {
        await OnSubmitViewMembers.InvokeAsync();
    }

    private async Task HandleModifyMemberPageSubmit()
    {
        await OnSubmitModifyMember.InvokeAsync();
    }
}